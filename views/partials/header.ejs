<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" href="../stylesheets/main.css">
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">YelpCamp</a>
            </div>
			 <p>
				 <form id="search" action="/campgrounds" method="GET" class="form-inline">
					 <div class="form-group">
						 <input id="search1" type="text" name="search" placeholder="Campground Search" class="form-control">
						 <input type="submit" value="search" class="btn btn-default">
					 </div>
				 </form>
			 </p>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
					<%if(!currentUser){%>
						<li><a href="/login">Login</a></li>
                    	<li><a href="/register">Sign Up</a></li>
					<%}else{%>
					<!--currentUser comes from the middleware in app.js app.use...currentUser=req.user-->
						<li><a href="#">Signed in <%=currentUser.username%></a></li>
						<li><a href="/logout">Logout</a></li>
					<%}%>
                </ul>
            </div>
        </div>
    </nav>
		

	<div class="container">
		<%if(error && error.length > 0){%>
			 <div class="alert alert-danger" role="alert">
	  			<%=error%>
			</div>
		<%}%>
		<%if(success && success.length > 0){ %>
		<div class="alert alert-success" role="alert">
	  		<%=success%>
		</div>
		<%}%>
	</div>
	